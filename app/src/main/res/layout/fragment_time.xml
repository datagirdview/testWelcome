<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <com.example.testwelcome.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ScrollView android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title_bar">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:layout_alignParentStart="true">
            <ImageView
            android:layout_width="40dp"
            android:layout_height="700dp"
            android:src="@drawable/timeline"
            android:layout_marginLeft="27dp"
                android:scrollbarAlwaysDrawHorizontalTrack="false"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="100dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1"
                android:layout_marginRight="16dp"
                android:layout_marginTop="15dp">
                <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    app:cardElevation="1.5dp"
                    app:cardCornerRadius="5dp"
                    app:cardBackgroundColor="@color/my_card_background2"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="0.15">
                <EditText android:id="@+id/today_schedule"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:hint="编写今日计划"
                    android:background="@null" />
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    app:cardElevation="1.5dp"
                    app:cardCornerRadius="5dp"
                    app:cardBackgroundColor="@color/my_card_background2"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:layout_gravity="center"
                        android:text="今天我学习了离散数学中的哈夫曼编码,然后逐渐成长为一个厉害的数学家"
                        android:textSize="18sp"
                        android:background="@null" />
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    app:cardElevation="1.5dp"
                    app:cardCornerRadius="5dp"
                    app:cardBackgroundColor="@color/my_card_background2"
                    android:layout_marginRight="16dp" >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:layout_gravity="center"
                        android:text="今天我学习了离散数学中的哈夫曼编码,然后逐渐成长为一个厉害的数学家"
                        android:textSize="18sp"
                        android:background="@null" />
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    app:cardElevation="1.5dp"
                    app:cardCornerRadius="5dp"
                    app:cardBackgroundColor="@color/my_card_background2"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="10dp" >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:layout_gravity="center"
                        android:text="今天我学习了三角形"
                        android:textSize="18sp"
                        android:background="@null" />
                    </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    app:cardElevation="1.5dp"
                    app:cardCornerRadius="5dp"
                    app:cardBackgroundColor="@color/my_card_background2"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="10dp" >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_gravity="center"
                        android:text="今天我学习了五角星"
                        android:textSize="18sp"
                        android:background="@null" />
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    app:cardElevation="1.5dp"
                    app:cardCornerRadius="5dp"
                    app:cardBackgroundColor="@color/my_card_background2"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="10dp" >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="14dp"
                        android:layout_gravity="center"
                        android:text="今天我学习了狂多的东西"
                        android:textSize="18sp"
                        android:background="@null" />
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="125dp"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    app:cardElevation="1.5dp"
                    app:cardCornerRadius="5dp"
                    app:cardBackgroundColor="@color/my_card_background2"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="10dp" >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:layout_gravity="center"
                        android:text="android一点都不会，我们只有靠自己的艰苦努力才能成功"
                        android:textSize="18sp"
                        android:background="@null" />
                    </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    app:cardElevation="1.5dp"
                    app:cardCornerRadius="5dp"
                    app:cardBackgroundColor="@color/my_card_background2"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="10dp" >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:layout_gravity="center"
                        android:text="你加入了"
                        android:textSize="18sp"
                        android:background="@null" />
                    </android.support.v7.widget.CardView>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>